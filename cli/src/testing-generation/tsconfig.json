{
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "useUnknownInCatchVariables": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["cli.ts"],
  "exclude": ["node_modules"]
}
