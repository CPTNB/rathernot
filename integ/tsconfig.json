{
  "compilerOptions": {
    "lib": ["es2021"],
    "strict": true,
    "esModuleInterop": true,
    "target": "es2021",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "useUnknownInCatchVariables": true,
    "sourceMap": false,
    "outDir": "dist",
    "strictNullChecks": true
  },
  "include": ["src/**/*", "tst/**/*"],
  "exclude": ["node_modules"]
}
